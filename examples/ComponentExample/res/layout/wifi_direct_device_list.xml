<?xml version="1.0" encoding="utf-8"?>
<com.missionse.uiextensions.SlidingLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAppearance="@style/Header2"
        android:text="@string/peer_list_title"
        android:paddingTop="10dp"
        android:paddingBottom="7dp"/>
    
    <ProgressBar
        android:id="@+id/peer_discovery_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:indeterminate="true"
        android:indeterminateOnly="true"
        android:visibility="gone" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
	    <!-- Available peers -->
	    <ListView
	        android:id="@id/android:list"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />
    </LinearLayout>
</com.missionse.uiextensions.SlidingLinearLayout>
