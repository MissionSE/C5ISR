<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
        android:id="@+id/nothing_selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/nothing_selected"
        android:textAppearance="?@android:attr/textAppearanceMedium"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/default_very_dark_gray"
        android:gravity="center_vertical|center_horizontal" />
    <LinearLayout
        android:id="@+id/entry_detail_container"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="@color/white"
	    android:visibility="gone" >
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:background="@color/default_very_dark_gray"
	        android:orientation="horizontal">
	        <TextView
	            android:id="@+id/entry_detail_title"
	            android:layout_width="0dip"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:textAppearance="?@android:attr/textAppearanceLarge"
	            android:textAllCaps="true"
	            android:textStyle="bold"
	            android:textColor="@color/very_light_gray"
	            android:padding="5dp"/>
	        <TextView
	            android:id="@+id/entry_detail_id"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textAppearance="?@android:attr/textAppearanceSmall"
	            android:textStyle="bold"
	            android:textColor="@color/very_light_gray"
	            android:padding="5dp" />
	    </LinearLayout>
	    <ScrollView
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1"
	        android:layout_margin="5dp">
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical">
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:orientation="vertical"
	                android:layout_margin="5dp">
                    <TextView
		                android:layout_height="wrap_content"
		                android:layout_width="match_parent"
		                android:textAppearance="?@android:attr/textAppearanceSmall"
		                android:text="@string/entry_detail_basic_header"
		                android:textAllCaps="true"
		                android:textStyle="bold"
		                android:textColor="@color/very_light_gray"
		                android:background="@color/default_very_dark_gray"
		                android:padding="3dp"/>
		            <TextView
		                android:id="@+id/entry_detail_basic_info"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:padding="10dp"
		                android:textAppearance="?@android:attr/textAppearanceMedium"
		                android:textColor="@color/black"
		                android:background="@color/very_light_gray">
		            </TextView>
		        </LinearLayout>
		        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textAppearance="?@android:attr/textAppearanceSmall"
                        android:text="@string/entry_detail_parent_header"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/very_light_gray"
                        android:background="@color/default_very_dark_gray"
                        android:padding="3dp"/>
		            <TextView
		                android:id="@+id/entry_detail_parent_info"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:padding="10dp"
		                android:textAppearance="?@android:attr/textAppearanceMedium"
		                android:textColor="@color/black"
		                android:background="@color/very_light_gray">
		            </TextView>
	            </LinearLayout>
	            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textAppearance="?@android:attr/textAppearanceSmall"
                        android:text="@string/entry_detail_inventory_header"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/very_light_gray"
                        android:background="@color/default_very_dark_gray"
                        android:padding="3dp"/>
		            <TextView
		                android:id="@+id/entry_detail_inventory"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:padding="10dp"
		                android:textAppearance="?@android:attr/textAppearanceMedium"
		                android:textColor="@color/black"
		                android:background="@color/very_light_gray">
		            </TextView>
	            </LinearLayout>
	            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textAppearance="?@android:attr/textAppearanceSmall"
                        android:text="@string/entry_detail_orders_header"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/very_light_gray"
                        android:background="@color/default_very_dark_gray"
                        android:padding="3dp"/>
		            <TextView
		                android:id="@+id/entry_detail_orders"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:padding="10dp"
		                android:textAppearance="?@android:attr/textAppearanceMedium"
		                android:textColor="@color/black"
		                android:background="@color/very_light_gray">
		            </TextView>
	            </LinearLayout>
	        </LinearLayout> 
	    </ScrollView>
	</LinearLayout>
</RelativeLayout>
