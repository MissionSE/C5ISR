<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <include layout="@layout/textview_database_nothing_selected" />
    <LinearLayout
        android:id="@+id/entry_detail_container"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="@color/white"
	    android:visibility="gone" >
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:background="@color/default_very_dark_gray"
	        android:orientation="horizontal">
	        <TextView
	            android:id="@+id/entry_detail_title"
	            android:layout_width="0dip"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:textAppearance="?@android:attr/textAppearanceLarge"
	            android:textAllCaps="true"
	            android:textStyle="bold"
	            android:textColor="@color/very_light_gray"
	            android:padding="5dp"/>
	        <TextView
	            android:id="@+id/entry_detail_id"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textAppearance="?@android:attr/textAppearanceSmall"
	            android:textStyle="bold"
	            android:textColor="@color/very_light_gray"
	            android:padding="5dp" />
	    </LinearLayout>
	    <ScrollView
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1"
	        android:layout_margin="5dp">
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical">
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:orientation="vertical"
	                android:layout_margin="5dp">
                    <include layout="@layout/textview_database_detail_header"
                        android:text="@string/entry_detail_basic_header" />
		            <include layout="@layout/textview_database_detail_content"
                        android:id="@+id/entry_detail_basic_info" />
		        </LinearLayout>
		        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">
                    <include layout="@layout/textview_database_detail_header"
                        android:text="@string/entry_detail_parent_header" />
		            <include layout="@layout/textview_database_detail_content"
                        android:id="@+id/entry_detail_parent_info" />
	            </LinearLayout>
	            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">
		            <include layout="@layout/textview_database_detail_header"
		                android:text="@string/entry_detail_inventory_header" />
		            <include layout="@layout/textview_database_detail_content"
                        android:id="@+id/entry_detail_inventory" />
	            </LinearLayout>
	            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">
                    <include layout="@layout/textview_database_detail_header"
                        android:text="@string/entry_detail_orders_header" />
		            <include layout="@layout/textview_database_detail_content"
		                android:id="@+id/entry_detail_orders" />
	            </LinearLayout>
	        </LinearLayout> 
	    </ScrollView>
	</LinearLayout>
</RelativeLayout>
