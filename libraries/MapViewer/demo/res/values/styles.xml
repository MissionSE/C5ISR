<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppTheme.CalloutTailBackground" parent="AppTheme">
        <item name="android:background">@drawable/bg_callout_tail</item>
    </style>

    <style name="AppTheme.NoBackground" parent="AppTheme">
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="addressHeader" parent="@android:style/TextAppearance.Small">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="addressDetail" parent="@android:style/TextAppearance.Medium">
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="contactNameTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">38sp</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="addressButton" />

    <style name="MapFilterSelectorButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/map_filter_button_background</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:textColor">@color/map_filterselect_inactive</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    
    <style name="ObservationDataWidget">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ObservationData">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ObservationData.Value">
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
    </style>

    <style name="ObservationData.Unit">
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
    </style>

</resources>