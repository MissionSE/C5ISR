<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/custom_item_image"
        android:layout_height="@dimen/custom_item_image"/>

    <TextView
        android:id="@id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Bubble.TextAppearance.Light"
        android:background="@android:color/black"
        android:paddingLeft="@dimen/custom_item_padding"
        android:paddingRight="@dimen/custom_item_padding"
        android:layout_gravity="center"
        android:alpha=".8"/>

</FrameLayout>