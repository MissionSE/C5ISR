<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android">

	<View
		android:id="@+id/observation_icon"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:layout_marginBottom="10dp"
		android:layout_gravity="center"
		android:scaleType="centerCrop"
		android:background="@drawable/callout_weather_btn"/>

	<FrameLayout
		android:layout_width="230dp"
		android:layout_height="230dp"
		android:layout_gravity="center"
		android:layout_marginBottom="10dp"
		android:background="@drawable/callout_data_ring">

		<LinearLayout
			android:id="@+id/observation_data_top_left"
			style="@style/ObservationDataWidget"
			android:layout_gravity="top|left"
			android:layout_marginLeft="@dimen/observation_callout_data_margin_corner"
			android:layout_marginTop="@dimen/observation_callout_data_margin_corner">

			<TextView
				android:id="@+id/observation_data_top_left_value"
				style="@style/ObservationData.Value"/>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/observation_data_top_left_icon"
					style="@style/ObservationDataIcon"/>

				<TextView
					android:id="@+id/observation_data_top_left_unit"
					style="@style/ObservationData.Unit"/>
			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/observation_data_top_center"
			style="@style/ObservationDataWidget"
			android:layout_gravity="top|center_horizontal"
			android:layout_marginTop="@dimen/observation_callout_data_margin_side">

			<TextView
				android:id="@+id/observation_data_top_center_value"
				style="@style/ObservationData.Value"/>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/observation_data_top_center_icon"
					style="@style/ObservationDataIcon"/>

				<TextView
					android:id="@+id/observation_data_top_center_unit"
					style="@style/ObservationData.Unit"/>
			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/observation_data_top_right"
			style="@style/ObservationDataWidget"
			android:layout_gravity="top|right"
			android:layout_marginRight="@dimen/observation_callout_data_margin_corner"
			android:layout_marginTop="@dimen/observation_callout_data_margin_corner">

			<TextView
				android:id="@+id/observation_data_top_right_value"
				style="@style/ObservationData.Value"/>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/observation_data_top_right_icon"
					style="@style/ObservationDataIcon"/>

				<TextView
					android:id="@+id/observation_data_top_right_unit"
					style="@style/ObservationData.Unit"/>
			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/observation_data_middle_left"
			style="@style/ObservationDataWidget"
			android:layout_gravity="center_vertical|left"
			android:layout_marginRight="@dimen/observation_callout_data_margin_side">

			<TextView
				android:id="@+id/observation_data_middle_left_value"
				style="@style/ObservationData.Value"/>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/observation_data_middle_left_icon"
					style="@style/ObservationDataIcon"/>

				<TextView
					android:id="@+id/observation_data_middle_left_unit"
					style="@style/ObservationData.Unit"/>
			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/observation_data_middle_right"
			style="@style/ObservationDataWidget"
			android:layout_gravity="center_vertical|right"
			android:layout_marginLeft="@dimen/observation_callout_data_margin_side">

			<TextView
				android:id="@+id/observation_data_middle_right_value"
				style="@style/ObservationData.Value"/>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/observation_data_middle_right_icon"
					style="@style/ObservationDataIcon"/>

				<TextView
					android:id="@+id/observation_data_middle_right_unit"
					style="@style/ObservationData.Unit"/>
			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/observation_data_bottom_left"
			style="@style/ObservationDataWidget"
			android:layout_gravity="bottom|left"
			android:layout_marginBottom="@dimen/observation_callout_data_margin_corner"
			android:layout_marginLeft="@dimen/observation_callout_data_margin_corner">

			<TextView
				android:id="@+id/observation_data_bottom_left_value"
				style="@style/ObservationData.Value"/>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/observation_data_bottom_left_icon"
					style="@style/ObservationDataIcon"/>

				<TextView
					android:id="@+id/observation_data_bottom_left_unit"
					style="@style/ObservationData.Unit"/>
			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/observation_data_bottom_center"
			style="@style/ObservationDataWidget"
			android:layout_gravity="bottom|center_horizontal"
			android:layout_marginBottom="@dimen/observation_callout_data_margin_side">

			<TextView
				android:id="@+id/observation_data_bottom_center_value"
				style="@style/ObservationData.Value"/>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/observation_data_bottom_center_icon"
					style="@style/ObservationDataIcon"/>

				<TextView
					android:id="@+id/observation_data_bottom_center_unit"
					style="@style/ObservationData.Unit"/>
			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/observation_data_bottom_right"
			style="@style/ObservationDataWidget"
			android:layout_gravity="bottom|right"
			android:layout_marginBottom="@dimen/observation_callout_data_margin_corner"
			android:layout_marginRight="@dimen/observation_callout_data_margin_corner">

			<TextView
				android:id="@+id/observation_data_bottom_right_value"
				style="@style/ObservationData.Value"/>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/observation_data_bottom_right_icon"
					style="@style/ObservationDataIcon"/>

				<TextView
					android:id="@+id/observation_data_bottom_right_unit"
					style="@style/ObservationData.Unit"/>
			</LinearLayout>
		</LinearLayout>

	</FrameLayout>

</merge>