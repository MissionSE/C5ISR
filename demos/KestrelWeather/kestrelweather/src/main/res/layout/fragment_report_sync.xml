<?xml version="1.0" encoding="utf-8"?>
<com.missionse.uiextensions.linearlayout.SlidingLinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<TextView
		android:id="@+id/fragment_report_sync_count"
		android:layout_width="match_parent"
		android:layout_height="?android:listPreferredItemHeight"
		android:gravity="center"
		android:textAppearance="?android:textAppearanceMedium"
		android:textColor="@color/gray_medium"
		android:layout_margin="10dp"
		android:background="@color/gray_light"
		android:text="Unsycned reports: 0"
		android:padding="5dp"/>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="0dip"
		android:layout_weight="1"
		android:layout_margin="10dp">

		<ListView
			android:id="@+id/fragment_report_sync_list"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>

		<TextView
			android:id="@+id/fragment_report_sync_list_empty"
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:gravity="center"
			android:text="@string/report_list_empty"
			android:textSize="22sp"
			android:textColor="@color/gray_medium"
			android:visibility="gone">
		</TextView>
	</FrameLayout>

	<Button
		android:id="@+id/sync_btn"
		android:text="@string/sync"
		style="?android:attr/borderlessButtonStyle"
		android:background="@drawable/fragment_sync_button_selector"
		android:textColor="@color/white"
		android:layout_margin="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

</com.missionse.uiextensions.linearlayout.SlidingLinearLayout>
