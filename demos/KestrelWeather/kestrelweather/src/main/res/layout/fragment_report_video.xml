<?xml version="1.0" encoding="utf-8"?>
<com.missionse.uiextensions.linearlayout.SlidingLinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="0dip"
		android:layout_weight="1">

		<TextView
			android:id="@+id/fragment_report_video_empty"
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:gravity="center"
			android:text="@string/no_video"
			android:textSize="22sp"
			android:textColor="@color/gray_medium"
			android:visibility="gone">
		</TextView>

		<ListView
			android:id="@+id/fragment_report_video_list"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>

	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/fragment_report_video_controls"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:visibility="gone">

		<View
			android:layout_width="match_parent"
			android:layout_height="1dip"
			android:layout_marginLeft="1dip"
			android:layout_marginRight="1dip"
			android:background="?android:attr/dividerHorizontal"/>

		<include
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			layout="@layout/fragment_report_audio_controls"/>
	</RelativeLayout>
</com.missionse.uiextensions.linearlayout.SlidingLinearLayout>