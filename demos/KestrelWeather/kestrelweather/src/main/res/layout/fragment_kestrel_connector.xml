<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<Button
		android:id="@+id/connect_to_device_btn"
		android:text="@string/connect_to_device"
		style="?android:attr/borderlessButtonStyle"
		android:background="@drawable/fragment_create_button_selector"
		android:textColor="@color/white"
		android:layout_margin="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

	<Button
		android:id="@+id/request_readings_btn"
		android:text="@string/no_device"
		style="?android:attr/borderlessButtonStyle"
		android:background="@drawable/fragment_create_button_selector"
		android:textColor="@color/white"
		android:layout_margin="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

	<TextView
		android:id="@+id/device_readings"
		android:layout_width="match_parent"
		android:layout_margin="10dp"
		android:padding="10dp"
		android:textColor="@color/black"
		android:editable="false"
		android:focusable="false"
		android:text="@string/no_readings"
		android:gravity="center_horizontal"
		android:background="@color/gray_light"
		android:layout_height="0dip"
		android:layout_weight="1"/>

	<Button
		android:id="@+id/continue_btn"
		android:text="@string/cont"
		style="?android:attr/borderlessButtonStyle"
		android:background="@drawable/fragment_create_button_selector"
		android:textColor="@color/white"
		android:layout_margin="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

</LinearLayout>
