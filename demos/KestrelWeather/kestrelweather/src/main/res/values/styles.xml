<resources>

	<style name="AppTheme" parent="android:Theme.Holo.Light">
	</style>

	<!-- Fragment: Kestrel Simulation -->
	<style name="fragment_kestrel_simulation_label" parent="@android:style/TextAppearance.Medium">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">?android:listPreferredItemHeightSmall</item>
		<item name="android:layout_margin">1dp</item>
		<item name="android:background">@color/gray_light</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="ObservationDataWidget">
		<item name="android:layout_width">56dp</item>
		<item name="android:layout_height">56dp</item>
		<item name="android:gravity">center</item>
		<item name="android:orientation">vertical</item>
		<item name="android:visibility">gone</item>
	</style>

	<style name="ObservationData">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="ObservationData.Value">
		<item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
	</style>

	<style name="ObservationDataIcon">
		<item name="android:tint">@color/white</item>
		<item name="android:layout_width">20dp</item>
		<item name="android:layout_height">20dp</item>
		<item name="android:scaleType">centerCrop</item>
	</style>

	<style name="ObservationData.Unit">
		<item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
	</style>

</resources>
