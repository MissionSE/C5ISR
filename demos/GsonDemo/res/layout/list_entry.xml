<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:ignore="HardcodedText,NestedWeights" >
      
    <ImageView 
        android:src="@drawable/shoppingbagicon"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:scaleType="fitCenter"
        android:layout_weight=".6" 
        android:contentDescription="TempImage" tools:ignore="HardcodedText"/>
   
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="140dp"
    	android:layout_weight=".4"
    	android:orientation="vertical">

	    <TextView
	        android:id="@+id/item_list_entry_name"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight=".3"
	        android:gravity="center|center_horizontal"
	        android:text="NAME"
	        tools:ignore="HardcodedText" />

	    <TextView
	        android:id="@+id/item_list_entry_price"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight=".3"
	        android:gravity="center|center_horizontal"
	        android:text="PRICE"/>
	    <TextView
	        android:id="@+id/item_list_entry_description"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight=".2"
	        android:gravity="center|center_horizontal"
	        android:text="DESCRIPTION"/>
    </LinearLayout>
    
    
</LinearLayout>
